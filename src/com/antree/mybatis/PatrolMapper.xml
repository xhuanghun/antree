<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.antree.mapper.PatrolMapper" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="com.antree.bean.Patrol" >
	<result column="id" property="id"/>
	<result column="code" property="code"/>
	<result column="xcsj" property="xcsj"/>
	<result column="xcqk" property="xcqk"/>
	<result column="xctp" property="xctp"/>
	<result column="xcry" property="xcry"/>
	<result column="xccs" property="xccs"/>	
	<result column="state" property="state"/>
	<result column="createTime" property="createTime"/>
	<result column="bz" property="bz"/>
</resultMap>
       
<!-- sys_user table all fields -->
<sql id="Base_Column_List" >
	 id,code,xcsj,xcqk,xctp,xcry,xccs,state,createTime,bz
</sql>
   
   
<!-- 查询条件 -->
<sql id="Example_Where_Clause">
where 1=1
<trim  suffixOverrides="," >
	<if test="id != null" >
	    and id =  #{id}
	</if>
	<if test="code != null and code != ''" >
	     and code like CONCAT('%', #{code}, '%')
	</if>	
	<if test="state != null and state != ''" >
	     and state = #{state}
	</if>
</trim>
</sql>   

<!-- 插入记录 -->
<insert id="add" parameterType="Object" >
  <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
	SELECT LAST_INSERT_ID()
  </selectKey>
  insert into gs_patrol(code,xcsj,xcqk,xctp,xcry,xccs,state,createTime,bz)
 values(#{code},#{xcsj},#{xcqk},#{xctp},#{xcry},#{xccs},#{state},#{createTime},#{bz})
</insert>

<!-- 根据id，修改所有字段记录-->  
 <update id="update" parameterType="Object" >
  update gs_patrol set code=#{code},xcsj=#{xcsj},xcqk=#{xcqk},xcry=#{xcry},state=#{state},bz=#{bz} where id=#{id}
 </update>
 
 <!-- 修改记录，只修改只不为空的字段 -->
<update id="updateBySelective" parameterType="Object" >
	update gs_patrol set 
	<trim  suffixOverrides="," >
	<if test="code != null  and code != '' ">
		code=#{code},
	</if>		
	<if test="bz != null  and bz != '' ">
		bz=#{bz},
	</if>
	</trim> where id=#{id}
</update>

<!-- 删除记录 -->
<delete id="delete" parameterType="Object">
	delete from gs_patrol where id = #{id}
</delete>
 
<!-- 根据id查询 系统用户 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
	select <include refid="Base_Column_List" /> 
	 from gs_patrol where id = #{id}
</select>

<select id="queryByCode"  resultMap="BaseResultMap" parameterType="Object">
	select 
	<include refid="Base_Column_List"/>
	from gs_patrol
	where 1=1
	<if test="code != null  and code != '' ">
		and code=#{code}
	</if> limit 0,1
</select>

<!-- 系统用户 列表总数-->
<select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
	select count(1) from gs_patrol 
	<include refid="Example_Where_Clause"/>
</select>

<select id="queryByAllList" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<include refid="Base_Column_List"/>
	from gs_patrol
</select> 
  	
<!-- 查询系统用户列表 -->
<select id="queryByList" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<include refid="Base_Column_List"/>
	from gs_patrol 
	<include refid="Example_Where_Clause"/>
	<if test="pager.orderCondition != null and pager.orderCondition != ''" >
      ${pager.orderCondition}
    </if>
    <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''" >
       ${pager.mysqlQueryCondition}
    </if>
</select> 	

</mapper>   
